///////////////////// IMPORTS /////////////////////
@import "help"
@import "variables"
@import "clases"

body
	padding-top 70px

select
	font-family FontAwesome, Helvetica !important
.increible
	font-family FontAwesome


.icon.en-cola
	color danger
.icon.reparado
	color success
.icon.en-revision
	color warning
.icon.entregado
	color info

///////// FORM LOGIN //////////
.form-login
	.form-group
		width 250px

///////// ITEM SERVICIO //////////
.item-servicio
	.left
		text-align center
	.progreess-widget
		position relative
		width 80%

	.msg-estado
		font-size size-1
	.progress
		height 8px
		margin-bottom 2px
		background-color white
		border solid 1px #999
		box-shadow none

		.bar-gray
			background-color #999

	.percent
		width 20px
		font-size size-0

	.fechas
		font-size size-0
		font-weight bold



///////// SERVICIO DETALLE //////////
#servicio 
	.logo
		text-align center
		.icon-servicio
			font-size 100px
	.fecha
		margin 0
	h1 
		margin-top 0
		margin-bottom 20px
	.estado
		font-size 15px

	.servicio-person
		text-align center


.progress-servicio
	margin-top 20px
	margin-bottom 40px
	.percent
		width 20px
		font-size size-0
	.progress
		height 10px
		margin-bottom 2px
		background-color white
		border solid 1px #999
		box-shadow none
		.bar-gray
			background-color #999
	.fechas
		font-size size-1
		font-weight bold





///////// PERSONA DETALLE //////////
#persona 
	.foto
		text-align center
	.icon-persona
		font-size 100px
	.linea
		height 1px 
		background-color #A39C9C


